<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Items</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <div class="container mx-auto p-6">
      <h1 class="text-3xl font-bold mb-4">Delete Items from Database</h1>

      <!-- Form to delete an item -->
      <form action="/delete/product" method="POST" class="space-y-4">
        <div class="mb-4">
          <label for="productType" class="block text-lg font-medium"
            >Select Product Type:</label
          >
          <select
            name="productType"
            id="productType"
            class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
          >
            <option value="phone">Phone</option>
            <option value="laptop">Laptop</option>
            <option value="tablet">Tablet</option>
          </select>
        </div>

        <div class="mb-4">
          <label for="productId" class="block text-lg font-medium"
            >Enter Product ObjectId:</label
          >
          <input
            type="text"
            name="productId"
            id="productId"
            class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
            required
          />
          <label for="productName" class="block text-lg font-medium"
            >Enter Product Name:</label
          >
          <input
            type="text"
            name="productName"
            id="productName"
            class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
            required
          />
        </div>

        <button type="submit" class="bg-red-600 text-white p-2 rounded-lg">
          Delete Item
        </button>
      </form>

      <div class="mt-8">
        <h2 class="text-2xl font-bold mb-4">Delete Specific Field</h2>
        <form action="/delete/product/field" method="POST" class="space-y-4">
          <div class="mb-4">
            <label for="productTypeField" class="block text-lg font-medium"
              >Select Product Type:</label
            >
            <select
              name="productType"
              id="productTypeField"
              class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
            >
              <option value="phone">Phone</option>
              <option value="laptop">Laptop</option>
              <option value="tablet">Tablet</option>
            </select>
          </div>

          <div class="mb-4">
            <label for="productIdField" class="block text-lg font-medium"
              >Enter Product ObjectId:</label
            >
            <input
              type="text"
              name="productId"
              id="productIdField"
              class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
              required
            />
          </div>

          <div class="mb-4">
            <label for="productField" class="block text-lg font-medium"
              >Enter Field to Delete:</label
            >
            <input
              type="text"
              name="productField"
              id="productField"
              class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
              required
            />
          </div>

          <button type="submit" class="bg-red-600 text-white p-2 rounded-lg">
            Delete Field Value
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
